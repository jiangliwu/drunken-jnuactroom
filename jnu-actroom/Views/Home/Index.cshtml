                {
                                        <br />
                                        <br />
                                        <p>最近无主题</p>
                }
                else
                {
                                        <br />
                                        @Html.ActionLink(newPosts[0].title.Substring(0, (newPosts[0].title.Length < 8 ? newPosts[0].title.Length : 8)) + "...", "details/" + newPosts[0].Id, "poster") <br />
                                            
                                        <a href="#">@(new jnu_actroom.Models.UsersContext().UserProfiles.Find(newPosts[0].UserId).UserName)</a>
                                      
                }
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="caption offset1">
