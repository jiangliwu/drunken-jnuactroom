                                </div>
                            </div>
                            <div class="span1">

                                <br />
                                <br />
                                @{
                int replay = (int)((new Random().NextDouble()) * 10000 % 53);
                int visit = replay + (int)((new Random().NextDouble()) * 10000 % 31);
                                }
                                @replay/@visit
                            </div>
                            <div class="span3">
                                <div class="caption">
                                    @{
                List<jnu_actroom.Models.PosterModel> newPosts = new jnu_actroom.Models.PosterDBContext().Posters.Where(u => u.CatalogId.Equals(item.Id)).ToList();
