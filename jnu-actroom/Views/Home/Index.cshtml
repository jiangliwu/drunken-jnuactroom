@model IEnumerable<jnu_actroom.Models.CatalogModel>
@{
    ViewBag.Title = "主页";
}
@section featured {

    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
            </hgroup>

        </div>
    </section>
}


<div class="row-fluid">
    <div class="span9">

        @{
             
            foreach (var item in Model)
