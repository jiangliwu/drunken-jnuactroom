<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - 暨南大学课后讨论网</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <!--
    @Styles.Render("~/Content/css")
    -->
    @Scripts.Render("~/Content/js/jquery-2.0.2.min.js")
    @Scripts.Render("~/Content/js/bootstrap.js")
    @Scripts.Render("~/Content/kindeditor/kindeditor.js")
    @Scripts.Render("~/Content/kindeditor/lang/en.js")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Content/js/jquery.backtotop.js")

    @Styles.Render("~/Content/css/bootstrap.min.css")
    @Styles.Render("~/Content/css/bootstrap-responsive.min.css")
    @Styles.Render("~/Content/kindeditor/plugins/code/prettify.css")
    @Styles.Render("~/Content/kindeditor/themes/qq/qq.css")
    @Styles.Render("~/Content/css/main.css")
    <script type="text/javascript">
        $(function () {
            $('.dropdown-toggle').dropdown();
            var alerts = $('ul.alert').wrap('<div />');
            alerts
                    .prepend('<a class="close" data-dismiss="alert" href="#">&times;</a>');
            alerts.alert();
        });
    </script>
</head>
<body>

    <div id="body">


        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a class="btn btn-navbar" data-toggle="collapse"
                        data-target=".nav-collapse"><span class="icon-bar"></span><span
                            class="icon-bar"></span><span class="icon-bar"></span></a>
                    @Html.ActionLink("课后讨论网", "Index", "Home", new { @class = "brand" })
                    <div class="nav-collapse">
                        <ul class="nav">
                            <li>@Html.ActionLink("主页", "Index", "Home")
                            </li>
                            <li class="dropdown"><a href="#" class="dropdown-toggle"
                                data-toggle="dropdown">主题<b class="caret"></b> </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("发表主题", "create", "poster") 
                                    </li>
                                    <li><a href="#">我参与的主题</a>
                                    </li>
                                    <li><a href="#">关注</a>
                                    </li>
                                    <li><a href="#">浏览我的主题</a></li>
                                    <li><a href="#">主题管理</a>
                                    </li>
                                </ul>
                            </li>
                    

                            <li>@Html.ActionLink("关于", "about", "Home")</li>
                            <li>@Html.ActionLink("联系我们", "contact", "Home")</li>
                        </ul>


                


                        <ul class="nav pull-right">
                             @if (Request.IsAuthenticated)
                             { 
                                 <li>@Html.ActionLink("修改资料", "Manage", "Account", routeValues: null, htmlAttributes: new {title = "修改资料" })</li>
                                 <li><a href="javascript:document.getElementById('logoutForm').submit()">退出系统(@User.Identity.Name)</a></li>
                             }else{
                              <li>@Html.ActionLink("注册账号", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                                <li>@Html.ActionLink("登陆系统", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                             }
                            
                            

                            <li class="dropdown last"><a href="#" class="dropdown-toggle"
                                data-toggle="dropdown"><i class="icon-book"></i>Wiki<b
                                    class="caret"></b> </a>
                                <ul class="dropdown-menu">
                                    <li><a href="#"><i
                                        class="icon-share"></i>搜索条目</a>
                                    </li>
                                    <li><a href="#"><i
                                        class="icon-share"></i>所有条目</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <!--/.nav-collapse -->
                </div>
            </div>
        </div>



        <div class="container">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
       </div>
    </div>
    

    <div id="footer">
		<div class="container">
			<p class="muted credit">
				Copyright &copy; 2003-2014
                @Html.ActionLink("暨南大学 - 课后讨论系统 alpha 1.0", "Index", "Home")
			</p>
			<p class="pull-right">
				<a href = "#" id="back-to-top">回到顶部</a>
				<script type="text/javascript">
				    $("#back-to-top").click(function (e) { e.preventDefault(); }).backToTop();
				</script>
			</p>
		</div>
	</div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

</body>
</html>

